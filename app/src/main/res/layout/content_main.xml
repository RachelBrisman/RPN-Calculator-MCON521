<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!--sets up the layout for textInputEditText, brings the hint up when user types-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Type in a Reverse Polish Notation Equation">

        <!--input field-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputted_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--result field-->
    <TextView
        android:id="@+id/echoed_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.google.android.material.card.MaterialCardView
        style="@style/MaterialCardWithBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:alpha=".8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:showIn="@layout/content_main">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorDefaultBackground"
            android:columnCount="3"
            android:orientation="horizontal">

            <Button
                style="@style/BorderlessButton"
                android:text="1" />

            <Button
                style="@style/BorderlessButton"
                android:text="2" />

            <Button
                style="@style/BorderlessButton"
                android:text="3" />

            <Button
                style="@style/BorderlessButton"
                android:text="4" />

            <Button
                style="@style/BorderlessButton"
                android:text="5" />

            <Button
                style="@style/BorderlessButton"
                android:text="6" />

            <Button
                style="@style/BorderlessButton"
                android:text="7" />

            <Button
                style="@style/BorderlessButton"
                android:text="8" />

            <Button
                style="@style/BorderlessButton"
                android:text="9" />

            <Button
                style="@style/BorderlessButton"
                android:text="." />

            <Button
                style="@style/BorderlessButton"
                android:text="0" />

            <Button
                style="@style/BorderlessButton"
                android:text="+" />

            <Button
                style="@style/BorderlessButton"
                android:text="-" />

            <Button
                style="@style/BorderlessButton"
                android:text="x" />

            <Button
                style="@style/BorderlessButton"
                android:text="/" />

            <Button
                style="@style/BorderlessButton"
                android:layout_columnSpan="3"
                android:layout_gravity="center_horizontal"
                android:text="SPACE" />
        </GridLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

